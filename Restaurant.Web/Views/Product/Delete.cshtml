@model Restaurant.Web.Models.ProductDto
<form asp-action="Delete">
    <input hidden asp-for="ProductId"/>
    <br />
    <div class="container border p-3">
        <h1 class="text-info">Delete Product</h1>
        <hr />
        <div class="row">
            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pt-3">
                <input class="form-control" asp-for="Name" readonly />
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                <label asp-for="CatagoryName" class="control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pt-3">
                <input class="form-control" asp-for="CatagoryName"readonly />
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                <label asp-for="Description" class="control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pt-3">
                <textarea class="form-control" asp-for="Description" rows="5" readonly></textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                <label asp-for="ImageUrl" class="control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pt-3" >
                <input class="form-control"  asp-for="ImageUrl" readonly />
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                <label asp-for="Price" class="control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pt-3">
                <input class="form-control" readonly asp-for="Price" />
            </div>
            <div class="col-5 offset-2">
                <a asp-action="ProductIndex" class="btn btn-primary btn form-control"> Back To List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
        <div></div>
    </div>

</form>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
